# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET          /login                                    @controllers.Auth.registerPage

#email register
GET        /register/sendEmail                        @controllers.Auth.sendConfirmEmail(email:String)
GET        /mail/validate_register                     @controllers.Auth.validateRegisterEmail(token:String)
GET        /register/setpassword                      @controllers.Auth.registerPage


# Map static resources from the /public folder to the /assets URL path
GET         /assets/lib/*file                                               controllers.WebJarAssets.at(file)
GET         /assets/*file                                                   controllers.Assets.versioned(path="/public", file: Asset)
